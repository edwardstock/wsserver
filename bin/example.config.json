{
  "server": {
    "endpoint": "/chat",
    "address": "*",
    "port": 8085,
    "workers": 8,
    "tmpDir": "/tmp",
    "timezone": "Europe/Moscow",
    "enableSecure": false,
    "secure": {
      "enabled": true,
      "crtPath": "../../certs/server.crt",
      "keyPath": "../../certs/server.key"
    },
    "watchdog": {
      "enabled": true,
      "connectionLifetimeSeconds": 600
    },
    "auth": {
      "type": "noauth",
      "types": [
        {
          "type": "cookie",
          "name": "dogsy",
          "value": "auth_tokena"
        },
        {
          "type": "cookie",
          "name": "dogsy",
          "value": "auth_keya"
        }
      ]
    }
  },
  "restApi": {
    "enabled": true,
    "address": "*",
    "port": 8092,
    "secure": {
      "enabled": true,
      "crtPath": "../../certs/server.crt",
      "keyPath": "../../certs/server.key"
    },
    "auth": {
      "type": "noauth",
      "name": "X-Ws-Token",
      "value": "password"
    }
  },
  "chat": {
    "enableUndeliveredQueue": false,
    "message": {
      "maxSize": "10M",
      "enableDeliveryStatus": false,
      "enableSendBack": true
    }
  },
  "event": {
    "enabled": false,
    "enableRetry": true,
    "sendBotMessages": false,
    "retryIntervalSeconds": 10,
    "retryCount": 0,
    "maxParallelWorkers": 16,
    "ignoreTypes": [
      "notification_typing"
    ],
    "targets": [
      {
        "type": "redis",
        "address": "127.0.0.1 << use this instead of unixSocket",
        "port": 6379,
        "database": 0,
        "unixSocket": "/path/to/redis/redis.sock  << use this instead of address",
        "password": "redis_password",
        "mode": {
          "type": "queue or channel (select one)",
          "name": "my_redis_queue_where_clients_will_take_messages"
        }
      }
    ]
  }
}
