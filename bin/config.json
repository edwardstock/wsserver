{
  "server": {
    "logLevel": 2,
    "endpoint": "/chat",
    "address": "*",
    "port": 8085,
    "workers": 8,
    "tmpDir": "/tmp",
    "timezone": "Europe/Moscow",
    "secure": {
      "enabled": false,
      "crtPath": "<insert certificate path here>",
      "keyPath": "<insert private key path here>"
    },
    "watchdog": {
      "enabled": false,
      "connectionLifetimeSeconds": 600
    },
    "auth": {
      "type": "noauth",
      "user": "user",
      "password": "password"
    }
  },
  "restApi": {
    "enabled": true,
    "address": "*",
    "port": 8092,
    "secure": {
      "enabled": false,
      "crtPath": "<insert certificate path here>",
      "keyPath": "<insert private key path here>"
    },
    "auth": {
      "type": "noauth",
      "name": "X-Ws-Token",
      "value": "password"
    }
  },
  "chat": {
    "enableUndeliveredQueue": false,
    "message": {
      "maxSize": "10M",
      "enableDeliveryStatus": false,
      "enableSendBack": false
    }
  },
  "event": {
    "enabled": false,
    "enableRetry": true,
    "sendBotMessages": false,
    "retryIntervalSeconds": 10,
    "retryCount": 3,
    "maxParallelWorkers": 16,
    "targets": [
      {
        "type": "postback",
        "url": "http://mydomain/postback-url",
        "connectionTimeoutSeconds": 10,
        "auth": {
          "type": "header",
          "name": "X-My-Api-Token",
          "value": "token"
        }
      }
    ]
  }
}
